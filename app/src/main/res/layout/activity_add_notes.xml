<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.LoginActivity">

    <EditText
        android:id="@+id/add_note_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Judul"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_note_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Kategori"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/add_note_title"
        app:layout_constraintStart_toStartOf="@+id/add_note_title"
        app:layout_constraintTop_toBottomOf="@id/add_note_title" />

    <EditText
        android:id="@+id/add_note_description"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:hint="Catatan"
        android:inputType="text|textMultiLine"
        app:layout_constraintEnd_toEndOf="@+id/add_note_category"
        app:layout_constraintStart_toStartOf="@+id/add_note_category"
        app:layout_constraintTop_toBottomOf="@id/add_note_category" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_note_save_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_button"
        android:text="Simpan"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/add_note_description"
        app:layout_constraintStart_toStartOf="@+id/add_note_description"
        app:layout_constraintTop_toBottomOf="@id/add_note_description" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_note_back_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_button_second"
        android:text="Kembali"
        android:textAllCaps="false"
        android:textColor="@color/orange_600"
        app:layout_constraintEnd_toEndOf="@+id/add_note_save_btn"
        app:layout_constraintStart_toStartOf="@+id/add_note_save_btn"
        app:layout_constraintTop_toBottomOf="@id/add_note_save_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>
